<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:typeface">sans</item>
        <item name="android:textSize">16sp</item>
        <!-- Đặt font chữ theo đường dẫn trong thư mục assets -->
        <item name="fontFamily">font/josefin.ttf</item>
    </style>
    <style name="MyDialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>


    <style name="AlertDialogTheme" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:windowAnimationStyle">@style/MyDialogAnimation</item>
    </style>
</resources>